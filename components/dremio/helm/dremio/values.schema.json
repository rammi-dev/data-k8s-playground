                      "items": {
                        "type": "object",
                        "required": ["name", "cpu", "memory", "action"],
                        "properties": {
                          "name": { "type": "string" },
                          "cpu": {
                            "oneOf": [
                              { "type": "integer", "minimum": 0 },
                              { "type": "string", "pattern": "^[0-9]+m?$" }
                            ]
                          },
                          "memory": { "type": "string", "pattern": "^[0-9]+(Gi|Mi)$" },
                          "action": { "type": "string", "enum": ["Reserve", "Over-commit"] }
                        }
                      }
                    },
                    "defaultOffset": { "type": "string" }
                  }
                },
                "storage": {
                  "type": "object",
                  "required": ["spillStorageSizes", "defaultSpillStorageSize", "c3StorageSizes", "defaultC3StorageSize"],
                  "properties": {
                    "spillStorageSizes": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "object",
                        "required": ["name", "storage"],
                        "properties": {
