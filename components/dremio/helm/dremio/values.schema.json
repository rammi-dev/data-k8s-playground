                  "properties": {
                    "durations": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string",
                        "pattern": "^PT([0-9]+H)?([0-9]+M)?([0-9]+S)?$"
                      }
                    },
                    "defaultDuration": {
                      "type": "string",
                      "pattern": "^PT([0-9]+H)?([0-9]+M)?([0-9]+S)?$"
                    },
                    "maximumDuration": {
