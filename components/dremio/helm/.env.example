# Dremio credentials â€” copy to .env and fill in real values
# cp .env.example .env

# Quay.io registry credentials (required for Dremio Enterprise images)
DREMIO_REGISTRY=quay.io
DREMIO_REGISTRY_USER=your-quay-username
DREMIO_REGISTRY_PASSWORD=your-quay-password
DREMIO_REGISTRY_EMAIL=your-email@example.com

# Dremio license key (leave empty for trial mode)
DREMIO_LICENSE_KEY=

# S3 credentials for distributed storage (injected from Ceph at deploy time)
DIST_ACCESS_KEY=test-dist-access-key
DIST_SECRET_KEY=test-dist-secret-key

# S3 credentials for catalog storage (injected from Ceph at deploy time)
CATALOG_ACCESS_KEY=test-catalog-access-key
CATALOG_SECRET_KEY=test-catalog-secret-key

# MongoDB app user
DREMIO_MONGODB_USER=dremio
DREMIO_MONGODB_PASSWORD=change-me-in-production

# MongoDB system users and passwords (change all in production!)
DREMIO_MONGODB_ADMIN_USER=clusterAdmin
DREMIO_MONGODB_ADMIN_PASSWORD=change-me-in-production
DREMIO_MONGODB_MONITOR_USER=clusterMonitor
DREMIO_MONGODB_MONITOR_PASSWORD=change-me-in-production
DREMIO_MONGODB_BACKUP_USER=backup
DREMIO_MONGODB_BACKUP_PASSWORD=change-me-in-production
DREMIO_MONGODB_USERADMIN_USER=userAdmin
DREMIO_MONGODB_USERADMIN_PASSWORD=change-me-in-production
